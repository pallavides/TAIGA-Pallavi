#ifndef AXI_SPI_H_
#define AXI_SPI_H_

#include "xspi.h"

#define SPI_DEV_ID		0

u8 init_spi();

u8 spi_transfer(u8 slave, u8* writeBuffer, u8* readBuffer, u8 numBytes);

u32 u32_to_buffer(u32 data, u8* buffer, u8 size);

u32 buffer_to_u32(u8* buffer, u8 size);

typedef enum {ADC=0x01, DAC=0x02, ENCODER_P=0x04, ENCODER_S=0x08} target_ss;


#endif /* AXI_SPI_H_ */

#endif /* AXI_SPI_H_ */
